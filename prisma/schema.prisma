generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  contactNo String    @default("") 
  gender    Gender    @default(male) 
  password  String
  firstName String
  lastName  String
  role      String    @default("user")
  bookings  Booking[]
  reviews   Review[]
}

model Service {
  id           String    @id @default(uuid())
  name         String
  description  String
  price        Float
  imageUrl     String    @default("") @map("image_url")
  availability Boolean
  bookings     Booking[]
  reviews      Review[]
}

model Booking {
  id          String  @id @default(uuid())
  bookingName String  @default("")
  userId      String
  serviceId   String
  date        String
  user        User    @relation(fields: [userId], references: [id])
  service     Service @relation(fields: [serviceId], references: [id])
}

model Review {
  id        String  @id @default(uuid())
  userId    String
  serviceId String
  rating    Int
  content   String
  user      User    @relation(fields: [userId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])
}

model Admin {
  id                 String @id @default(uuid())
  firstName          String
  middleName         String
  lastName           String
  gender             String
  email              String
  contactNo          String
  emergencyContactNo String
  bloodGroup         String
  designation        String
  presentAddress     String
  permanentAddress   String
  password           String
}

model SuperAdmin {
  id        String @id @default(uuid())
  email     String @unique
  password  String
  role      String @default("super_admin")
  firstName String
  lastName  String
}
